---
layout: feed
---
<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">

	<title>Chris' Blog</title>
	<link href="http://chrisjudk.me/blog/atom.xml" rel="self"/>
	<link href="http://chrisjudk.me/blog"/>
	<updated>{{ site.time | date_to_xmlschema }}</updated>
	<id>http://chrisjudk.me/blog</id>
	<author>
		<name>Chris Judkins</name>
		<email>chrisjudk@gmail.com</email>
	</author>

	{% for post in site.posts %}
		<entry>
			<title>{{ post.title }}</title>
			<link href="http://chrisjudk.me{{ post.url }}"/>
			<updated>{{ post.date | date_to_xmlschema }}</updated>
			<id>http://chrisjudk.me{{ post.id }}</id>
			<content type="html">{{ post.content | xml_escape }}</content>
		</entry>
	{% endfor %}

</feed>
